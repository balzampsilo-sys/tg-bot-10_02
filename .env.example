# === BOT CONFIGURATION ===
# Telegram Bot Token (получить у @BotFather)
BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# === ADMIN SETTINGS ===
# Admin Telegram IDs (через запятую, получить у @userinfobot)
ADMIN_IDS=123456789,987654321

# Максимальное количество добавлений админов в час
MAX_ADMIN_ADDITIONS_PER_HOUR=3

# === BOOKING SETTINGS ===
# Максимальное количество активных броней на одного пользователя
MAX_BOOKINGS_PER_USER=3

# За сколько часов до встречи можно отменить бронь
CANCELLATION_HOURS=24

# === REMINDERS ===
# Напоминания за несколько часов до встречи
REMINDER_HOURS_BEFORE_1H=1
REMINDER_HOURS_BEFORE_2H=2
REMINDER_HOURS_BEFORE_24H=24

# === FEEDBACK ===
# Через сколько часов после встречи запросить отзыв
FEEDBACK_HOURS_AFTER=2

# === SERVICE INFO ===
# Адрес оказания услуг
SERVICE_LOCATION=Москва, ул. Примерная, 1

# === ONBOARDING ===
# Задержки при онбординге (в секундах)
ONBOARDING_DELAY_SHORT=1.5
ONBOARDING_DELAY_LONG=3.0

# === WORK SCHEDULE ===
# Рабочие часы (начало и конец)
WORK_HOURS_START=9
WORK_HOURS_END=18

# === DATABASE ===
# Путь к файлу базы данных
DATABASE_PATH=bookings.db

# === DATABASE RETRY LOGIC ===
# Настройки повторных попыток при ошибках БД
DB_MAX_RETRIES=3
DB_RETRY_DELAY=0.5
DB_RETRY_BACKOFF=2.0

# === REDIS (FSM Storage) ===
# Использовать Redis для хранения FSM состояний (не теряются при рестарте)
REDIS_ENABLED=False

# Redis хост
REDIS_HOST=localhost

# Redis порт
REDIS_PORT=6379

# Redis база данных (0-15)
REDIS_DB=0

# Redis пароль (опционально)
# REDIS_PASSWORD=your_password

# === BACKUP ===
# Включить автоматическое резервное копирование
BACKUP_ENABLED=True

# Папка для резервных копий
BACKUP_DIR=backups

# Интервал создания резервных копий (в часах)
BACKUP_INTERVAL_HOURS=24

# Срок хранения резервных копий (в днях)
BACKUP_RETENTION_DAYS=30

# === BROADCAST ===
# Задержка между сообщениями при рассылке (в секундах)
BROADCAST_DELAY=0.05

# === RATE LIMITING ===
# Минимальная задержка между сообщениями пользователя (в секундах)
RATE_LIMIT_MESSAGE=0.5

# Минимальная задержка между callback-кнопками пользователя (в секундах)
RATE_LIMIT_CALLBACK=0.3

# === CALENDAR ===
# На сколько месяцев вперед можно забронировать
CALENDAR_MAX_MONTHS_AHEAD=3
